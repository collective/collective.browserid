<?xml version="1.0" encoding="UTF-8"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.browserid">

  <portlet
      addview="portlets.BrowserIDLogin"
      title="BrowserID Login"
      description="A portlet which can render a BrowserID log-in box"
      i18n:attributes="title;
                       description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
  </portlet>
  
  <assignment
      manager="plone.leftcolumn"
      category="context"
      key="/"
      type="portlets.BrowserIDLogin"
      name="browserid-login"
      visible="1"
      />

</portlets>
